<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/game_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/table_green" >
    
    <ImageView
        android:id="@+id/player_0_card_1"
        android:layout_width="@dimen/card_self_width"
        android:layout_height="@dimen/card_self_height"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/card_margin"
        android:layout_marginEnd="@dimen/card_margin"
        android:layout_toLeftOf="@+id/player_0_card_2"
        android:layout_toStartOf="@+id/player_0_card_2"
        android:contentDescription="@string/card"
        android:rotation="-10"
        android:clickable="true"
        android:src="@drawable/card_spades_j" />

    <ImageView
        android:id="@+id/player_0_card_2"
        android:layout_width="@dimen/card_self_width"
        android:layout_height="@dimen/card_self_height"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/card"
        android:clickable="true"
        android:src="@drawable/card_hearts_5" />

    <ImageView
        android:id="@+id/player_0_card_3"
        android:layout_width="@dimen/card_self_width"
        android:layout_height="@dimen/card_self_height"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/card_margin"
        android:layout_marginStart="@dimen/card_margin"
        android:layout_toEndOf="@+id/player_0_card_2"
        android:layout_toRightOf="@+id/player_0_card_2"
        android:contentDescription="@string/card"
        android:rotation="10"
        android:clickable="true"
        android:src="@drawable/card_spades_a" />
    
    <ImageView
        android:id="@+id/player_0_card"
        android:layout_width="@dimen/card_width"
        android:layout_height="@dimen/card_height"
        android:layout_above="@+id/player_0_card_2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/card_diff_half"
        android:contentDescription="@string/card"
        android:src="@drawable/card_red_v" />
    
    <TextView
        android:id="@+id/player_0_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/name_friend"
        android:text="@string/player_0" />

    <ImageView
        android:id="@+id/player_1_card_1"
        android:layout_width="@dimen/card_width"
        android:layout_height="@dimen/card_height"
        android:layout_above="@+id/player_1_card_2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="@dimen/card_margin_diff_half"
        android:layout_marginLeft="@dimen/card_diff_half"
        android:layout_marginStart="@dimen/card_diff_half"
        android:contentDescription="@string/card"
        android:rotation="100"
        android:src="@drawable/card_red_v" />

    <ImageView
        android:id="@+id/player_1_card_2"
        android:layout_width="@dimen/card_width"
        android:layout_height="@dimen/card_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/card_diff_half"
        android:layout_marginStart="@dimen/card_diff_half"
        android:contentDescription="@string/card"
        android:rotation="95"
        android:src="@drawable/card_red_v" />

    <ImageView
        android:id="@+id/player_1_card_3"
        android:layout_width="@dimen/card_width"
        android:layout_height="@dimen/card_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/player_1_card_2"
        android:layout_marginLeft="@dimen/card_diff_half"
        android:layout_marginStart="@dimen/card_diff_half"
        android:layout_marginTop="@dimen/card_margin_diff_half"
        android:contentDescription="@string/card"
        android:rotation="80"
        android:src="@drawable/card_red_v" />
    
    <ImageView
        android:id="@+id/player_1_card"
        android:layout_width="@dimen/card_width"
        android:layout_height="@dimen/card_height"
        android:layout_toRightOf="@+id/player_1_card_2"
        android:layout_toEndOf="@+id/player_1_card_2"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/card_diff"
        android:layout_marginStart="@dimen/card_diff"
        android:contentDescription="@string/card"
        android:src="@drawable/card_red_v" />
    
    <com.wingeon.truco.VerticalTextView
        android:id="@+id/player_1_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@color/name_opponent"
        android:text="@string/player_1" />

    <ImageView
        android:id="@+id/player_2_card_1"
        android:layout_width="@dimen/card_width"
        android:layout_height="@dimen/card_height"
        android:layout_alignParentTop="true"
        android:layout_marginRight="@dimen/card_margin"
        android:layout_marginEnd="@dimen/card_margin"
        android:layout_toLeftOf="@+id/player_2_card_2"
        android:layout_toStartOf="@+id/player_2_card_2"
        android:contentDescription="@string/card"
        android:rotation="20"
        android:src="@drawable/card_red_v" />

    <ImageView
        android:id="@+id/player_2_card_2"
        android:layout_width="@dimen/card_width"
        android:layout_height="@dimen/card_height"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/card"
        android:rotation="20"
        android:src="@drawable/card_red_v" />

    <ImageView
        android:id="@+id/player_2_card_3"
        android:layout_width="@dimen/card_width"
        android:layout_height="@dimen/card_height"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/card_margin"
        android:layout_marginStart="@dimen/card_margin"
        android:layout_toEndOf="@+id/player_2_card_2"
        android:layout_toRightOf="@+id/player_2_card_2"
        android:contentDescription="@string/card"
        android:rotation="-10"
        android:src="@drawable/card_red_v" />
    
    <ImageView
        android:id="@+id/player_2_card"
        android:layout_width="@dimen/card_width"
        android:layout_height="@dimen/card_height"
        android:layout_below="@+id/player_2_card_2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/card_diff_half"
        android:contentDescription="@string/card"
        android:src="@drawable/card_red_v" />
    
    <TextView
        android:id="@+id/player_2_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/name_friend"
        android:text="@string/player_2" />
    
    <ImageView
        android:id="@+id/player_3_card_1"
        android:layout_width="@dimen/card_width"
        android:layout_height="@dimen/card_height"
        android:layout_above="@+id/player_3_card_2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="@dimen/card_margin_diff_half"
        android:layout_marginRight="@dimen/card_diff_half"
        android:layout_marginEnd="@dimen/card_diff_half"
        android:contentDescription="@string/card"
        android:rotation="100"
        android:src="@drawable/card_red_v" />

    <ImageView
        android:id="@+id/player_3_card_2"
        android:layout_width="@dimen/card_width"
        android:layout_height="@dimen/card_height"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/card_diff_half"
        android:layout_marginEnd="@dimen/card_diff_half"
        android:contentDescription="@string/card"
        android:rotation="95"
        android:src="@drawable/card_red_v" />

    <ImageView
        android:id="@+id/player_3_card_3"
        android:layout_width="@dimen/card_width"
        android:layout_height="@dimen/card_height"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/player_3_card_2"
        android:layout_marginRight="@dimen/card_diff_half"
        android:layout_marginEnd="@dimen/card_diff_half"
        android:layout_marginTop="@dimen/card_margin_diff_half"
        android:contentDescription="@string/card"
        android:rotation="80"
        android:src="@drawable/card_red_v" />
    
    <ImageView
        android:id="@+id/player_3_card"
        android:layout_width="@dimen/card_width"
        android:layout_height="@dimen/card_height"
        android:layout_toLeftOf="@+id/player_3_card_2"
        android:layout_toStartOf="@+id/player_3_card_2"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/card_diff"
        android:layout_marginEnd="@dimen/card_diff"
        android:contentDescription="@string/card"
        android:src="@drawable/card_red_v" />
    
    <com.wingeon.truco.VerticalTextView
        android:id="@+id/player_3_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@color/name_opponent"
        android:gravity="bottom"
        android:text="@string/player_3" />

    <Button
        android:id="@+id/truco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="@string/truco"
        android:textColor="@color/text_main" />

    <Button
        android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/truco"
        android:text="@string/closed"
        android:textColor="@color/text_main" />
    
    <FrameLayout 
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content" 
	    android:layout_centerInParent="true"
	    android:paddingLeft="0dp"
	    android:paddingStart="0dp"
	    android:paddingRight="20dp"
	    android:paddingEnd="20dp"
	    android:paddingTop="20dp">
	    
	    <ImageView
	        android:id="@+id/card_turn"
	        android:layout_width="@dimen/card_width"
	        android:layout_height="@dimen/card_height"
	        android:layout_margin="20dp"
	        android:layout_marginEnd="20dp"
	        android:layout_marginRight="20dp"
	        android:layout_marginTop="20dp"
	        android:contentDescription="@string/turn"
	        android:rotation="-30"
	        android:src="@drawable/card_clubs_4" />

	</FrameLayout>
	
    <FrameLayout 
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content" 
	    android:layout_centerInParent="true">
	
	    <ImageView
	        android:id="@+id/deck"
	        android:layout_width="40dp"
	        android:layout_height="56dp"
	        android:contentDescription="@string/deck"
	        android:src="@drawable/deck_red" />
	</FrameLayout>

    <TextView
        android:id="@+id/team0_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="@color/name_friend"
        android:text="@string/team_0" />

    <TextView
        android:id="@+id/team1_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/team0_score"
        android:background="@color/name_opponent"
        android:text="@string/team_1" />

</RelativeLayout>